import 'dart:async';
import 'package:flutter/material.dart';
import 'package:google_maps_flutter/google_maps_flutter.dart';
import '../../models/shop_model.dart';
import '../../models/salesman_location_model.dart';
import '../../services/inventory_tracking_service.dart';

class MapViewScreen extends StatefulWidget {
  const MapViewScreen({super.key});

  @override
  State<MapViewScreen> createState() => _MapViewScreenState();
}

class _MapViewScreenState extends State<MapViewScreen> {
  final Completer<GoogleMapController> _controller = Completer();

  Set<Marker> markers = {};
  List<Shop> shops = [];
  List<SalesmanLocation> salesmenLocations = [];

  bool isLoading = true;
  ShopStage? selectedStage;
  String? selectedSalesman;

  static const CameraPosition _initialPosition = CameraPosition(
    target: LatLng(23.2599, 77.4126), // Bhopal, India
    zoom: 12,
  );

  @override
  void initState() {
    super.initState();
    _loadMapData();
  }

  Future<void> _loadMapData() async {
    setState(() => isLoading = true);
    try {
      final fetchedShops = await InventoryTrackingService.getAllShops();
      final fetchedLocations =
          await InventoryTrackingService.getAllSalesmenLocations();

      setState(() {
        shops = fetchedShops;
        salesmenLocations = fetchedLocations;
        isLoading = false;
      });

      _updateMarkers();
    } catch (e) {
      setState(() => isLoading = false);
      if (mounted) {
        ScaffoldMessenger.of(
          context,
        ).showSnackBar(SnackBar(content: Text('Error loading map data: $e')));
      }
    }
  }

  void _updateMarkers() {
    final newMarkers = <Marker>{};

    // Add shop markers
    for (final shop in shops) {
      if (selectedStage != null && shop.stage != selectedStage) continue;
      if (selectedSalesman != null && shop.assignedTo != selectedSalesman)
        continue;

      newMarkers.add(
        Marker(
          markerId: MarkerId('shop_${shop.id}'),
          position: shop.location,
          icon: BitmapDescriptor.defaultMarkerWithHue(
            _getMarkerHue(shop.stage),
          ),
          infoWindow: InfoWindow(
            title: shop.name,
            snippet: '${shop.stage.displayName} â€¢ ${shop.category}',
          ),
          onTap: () => _showShopDetails(shop),
        ),
      );
    }

    // Add salesman markers
    for (final location in salesmenLocations) {
      newMarkers.add(
        Marker(
          markerId: MarkerId('salesman_${location.salesmanId}'),
          position: location.location,
          icon: BitmapDescriptor.defaultMarkerWithHue(
            BitmapDescriptor.hueViolet,
          ),
          infoWindow: InfoWindow(
            title: location.salesmanName,
            snippet: location.isOnline ? 'Online' : 'Offline',
          ),
        ),
      );
    }

    setState(() {
      markers = newMarkers;
    });
  }

  double _getMarkerHue(ShopStage stage) {
    switch (stage) {
      case ShopStage.newShop:
        return BitmapDescriptor.hueBlue;
      case ShopStage.followUp:
        return BitmapDescriptor.hueYellow;
      case ShopStage.converted:
        return BitmapDescriptor.hueGreen;
      case ShopStage.lost:
        return BitmapDescriptor.hueRed;
      case ShopStage.pending:
        return BitmapDescriptor.hueOrange;
    }
  }

  void _showShopDetails(Shop shop) {
    showModalBottomSheet(
      context: context,
      shape: const RoundedRectangleBorder(
        borderRadius: BorderRadius.vertical(top: Radius.circular(20)),
      ),
      builder: (context) => Container(
        padding: const EdgeInsets.all(20),
        child: Column(
          mainAxisSize: MainAxisSize.min,
          crossAxisAlignment: CrossAxisAlignment.start,
          children: [
            Row(
              children: [
                Container(
                  width: 12,
                  height: 12,
                  decoration: BoxDecoration(
                    color: Color(shop.stage.colorValue),
                    shape: BoxShape.circle,
                  ),
                ),
                const SizedBox(width: 8),
                Expanded(
                  child: Text(
                    shop.name,
                    style: const TextStyle(
                      fontSize: 20,
                      fontWeight: FontWeight.bold,
                    ),
                  ),
                ),
              ],
            ),
            const SizedBox(height: 16),
            _buildDetailRow(Icons.category, 'Category', shop.category),
            _buildDetailRow(Icons.location_on, 'Address', shop.address),
            _buildDetailRow(Icons.pin_drop, 'Pin Code', shop.pinCode),
            _buildDetailRow(Icons.flag, 'Stage', shop.stage.displayName),
            if (shop.assignedToName != null)
              _buildDetailRow(
                Icons.person,
                'Assigned To',
                shop.assignedToName!,
              ),
            if (shop.phone != null)
              _buildDetailRow(Icons.phone, 'Phone', shop.phone!),
            const SizedBox(height: 16),
            Row(
              children: [
                Expanded(
                  child: ElevatedButton.icon(
                    onPressed: () {
                      Navigator.pop(context);
                      // Navigate to shop details
                    },
                    icon: const Icon(Icons.info),
                    label: const Text('Details'),
                    style: ElevatedButton.styleFrom(
                      backgroundColor: const Color(0xFFD7BE69),
                    ),
                  ),
                ),
                const SizedBox(width: 12),
                Expanded(
                  child: ElevatedButton.icon(
                    onPressed: () {
                      Navigator.pop(context);
                      // Navigate to directions
                    },
                    icon: const Icon(Icons.directions),
                    label: const Text('Navigate'),
                    style: ElevatedButton.styleFrom(
                      backgroundColor: Colors.blue,
                    ),
                  ),
                ),
              ],
            ),
          ],
        ),
      ),
    );
  }

  Widget _buildDetailRow(IconData icon, String label, String value) {
    return Padding(
      padding: const EdgeInsets.only(bottom: 12),
      child: Row(
        children: [
          Icon(icon, size: 20, color: Colors.grey[600]),
          const SizedBox(width: 12),
          Text(
            '$label: ',
            style: TextStyle(color: Colors.grey[600], fontSize: 14),
          ),
          Expanded(
            child: Text(
              value,
              style: const TextStyle(fontWeight: FontWeight.w500, fontSize: 14),
            ),
          ),
        ],
      ),
    );
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: const Text('Map View'),
        backgroundColor: const Color(0xFFD7BE69),
        actions: [
          IconButton(
            icon: const Icon(Icons.filter_list),
            onPressed: _showFilterDialog,
          ),
          IconButton(icon: const Icon(Icons.refresh), onPressed: _loadMapData),
        ],
      ),
      body: Stack(
        children: [
          GoogleMap(
            initialCameraPosition: _initialPosition,
            markers: markers,
            onMapCreated: (GoogleMapController controller) {
              _controller.complete(controller);
            },
            myLocationEnabled: true,
            myLocationButtonEnabled: true,
            zoomControlsEnabled: true,
            mapType: MapType.normal,
          ),
          if (isLoading)
            Container(
              color: Colors.black26,
              child: const Center(
                child: CircularProgressIndicator(color: Color(0xFFD7BE69)),
              ),
            ),
          Positioned(top: 16, left: 16, right: 16, child: _buildLegend()),
          Positioned(bottom: 16, left: 16, right: 16, child: _buildStatsBar()),
        ],
      ),
    );
  }

  Widget _buildLegend() {
    return Card(
      child: Padding(
        padding: const EdgeInsets.all(12),
        child: Column(
          crossAxisAlignment: CrossAxisAlignment.start,
          mainAxisSize: MainAxisSize.min,
          children: [
            const Text(
              'Legend',
              style: TextStyle(fontWeight: FontWeight.bold, fontSize: 12),
            ),
            const SizedBox(height: 8),
            Wrap(
              spacing: 12,
              runSpacing: 4,
              children: [
                _buildLegendItem('New', Colors.blue),
                _buildLegendItem('Follow-up', Colors.yellow[700]!),
                _buildLegendItem('Converted', Colors.green),
                _buildLegendItem('Lost', Colors.red),
                _buildLegendItem('Salesman', Colors.purple),
              ],
            ),
          ],
        ),
      ),
    );
  }

  Widget _buildLegendItem(String label, Color color) {
    return Row(
      mainAxisSize: MainAxisSize.min,
      children: [
        Container(
          width: 12,
          height: 12,
          decoration: BoxDecoration(color: color, shape: BoxShape.circle),
        ),
        const SizedBox(width: 4),
        Text(label, style: const TextStyle(fontSize: 11)),
      ],
    );
  }

  Widget _buildStatsBar() {
    return Card(
      child: Padding(
        padding: const EdgeInsets.all(12),
        child: Row(
          mainAxisAlignment: MainAxisAlignment.spaceAround,
          children: [
            _buildStatItem('Shops', shops.length.toString(), Icons.store),
            _buildStatItem(
              'Salesmen',
              salesmenLocations.length.toString(),
              Icons.people,
            ),
            _buildStatItem(
              'Online',
              salesmenLocations.where((l) => l.isOnline).length.toString(),
              Icons.online_prediction,
            ),
          ],
        ),
      ),
    );
  }

  Widget _buildStatItem(String label, String value, IconData icon) {
    return Column(
      mainAxisSize: MainAxisSize.min,
      children: [
        Icon(icon, size: 20, color: const Color(0xFFD7BE69)),
        const SizedBox(height: 4),
        Text(
          value,
          style: const TextStyle(fontSize: 16, fontWeight: FontWeight.bold),
        ),
        Text(label, style: TextStyle(fontSize: 11, color: Colors.grey[600])),
      ],
    );
  }

  void _showFilterDialog() {
    showDialog(
      context: context,
      builder: (context) => AlertDialog(
        title: const Text('Filter Map'),
        content: Column(
          mainAxisSize: MainAxisSize.min,
          children: [
            DropdownButtonFormField<ShopStage>(
              initialValue: selectedStage,
              decoration: const InputDecoration(
                labelText: 'Shop Stage',
                border: OutlineInputBorder(),
              ),
              items: [
                const DropdownMenuItem(value: null, child: Text('All Stages')),
                ...ShopStage.values.map(
                  (stage) => DropdownMenuItem(
                    value: stage,
                    child: Text(stage.displayName),
                  ),
                ),
              ],
              onChanged: (value) {
                setState(() {
                  selectedStage = value;
                });
              },
            ),
          ],
        ),
        actions: [
          TextButton(
            onPressed: () {
              setState(() {
                selectedStage = null;
                selectedSalesman = null;
              });
              _updateMarkers();
              Navigator.pop(context);
            },
            child: const Text('Clear'),
          ),
          ElevatedButton(
            onPressed: () {
              _updateMarkers();
              Navigator.pop(context);
            },
            style: ElevatedButton.styleFrom(
              backgroundColor: const Color(0xFFD7BE69),
            ),
            child: const Text('Apply'),
          ),
        ],
      ),
    );
  }
}
